{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "cd backend-v1 && node hybridServer.js",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "develop"
            }
        },

        {
            "label": "Start facial-service",
            "type": "shell",
            "command": "cd facial-service && docker compose up --build",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "develop"
            }
        },



        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "cd frontend-v2 && npm run dev",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "develop"
            }
        },
        {
            "label": "Start Development Environment",
            "dependsOn": ["Start facial-service", "Start Backend", "Start Frontend"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
